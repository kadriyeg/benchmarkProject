<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="63dp"
        android:text="WELCOME TO THE BENCHMARK APP"
        app:layout_constraintBottom_toTopOf="@+id/cpuBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stringBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="72dp"
        android:text="STRING TEST"
        app:layout_constraintStart_toStartOf="@+id/gpuBtn"
        app:layout_constraintTop_toBottomOf="@+id/gpuBtn" />

    <Button
        android:id="@+id/cpuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="CPU Stress Test"
        app:layout_constraintBottom_toTopOf="@+id/gpuBtn"
        app:layout_constraintEnd_toEndOf="@+id/gpuBtn"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/gpuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="GPU Stress Test"
        app:layout_constraintBottom_toTopOf="@+id/stringBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpuBtn" />

    <TextView
        android:id="@+id/creatorText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="44dp"
        android:text="Edibe Feride Yamaç - 192010020018 İrem Nur Mermer - 192010020007 Kadriye Gündüz - 192010020025"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stringBtn" />

</android.support.constraint.ConstraintLayout>